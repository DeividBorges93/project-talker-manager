{
  "openapi": "3.0.0",
  "info": {
    "title": "Talker manager",
    "description": "Essa API é para cadastro e pesquisa de 'talkers",
    "contact": {
      "email": "deividdeveloper22@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "URL inicial do projeto"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "description": "Rota para fazer o login de usuário",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "Login": {
                  "value": {
                    "email": "email@email.com",
                    "password": "my-secret-password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "$ref": "#/components/schemas/emailIsRequired"
                      },
                      {
                        "$ref": "#/components/schemas/emailMustHaveThe@"
                      },
                      {
                        "$ref": "#/components/schemas/passwordIsRequired"
                      },
                      {
                        "$ref": "#/components/schemas/passwordIsNotgt6"
                      }
                    ]
                  }
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref":"#/components/schemas/Token"
                }
              }
            }
          }
        }
      }
    },
    "/talker": {
      "get": {
        "description": "Rota que retorna todos os 'talkers' cadastrados",
        "tags": ["Talkers"],
        "security":[{"apiKey": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type":"array",
                  "$ref":"#/components/schemas/Talkers"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Página de cadastro de novo 'talker'",
        "tags": ["Talkers"],
        "security":[{"apiKey": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Talker"
              },
              "examples": {
                "Talker": {
                  "value": {
                    "name": "Henrique Albuquerque",
                    "age": 62,
                    "id": 1,
                    "talk": {
                      "watchedAt": "23/10/2020",
                      "rate": 5
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "$ref": "#/components/schemas/nameIsRequired"
                      },
                      {
                        "$ref": "#/components/schemas/nameIsNotgt3"
                      },
                      {
                        "$ref": "#/components/schemas/ageIsRequired"
                      },
                      {
                        "$ref": "#/components/schemas/ageIsNotgt18"
                      },
                      {
                        "$ref": "#/components/schemas/watchedAtIsRequired"
                      },
                      {
                        "$ref": "#/components/schemas/watchedAtMustHaveDateFormat"
                      },
                      {
                        "$ref": "#/components/schemas/rateIsRequired"
                      },
                      {
                        "$ref": "#/components/schemas/rateIsAIntegerlt5"
                      },
                      {
                        "$ref": "#/components/schemas/talkIsRequired"
                      }
                    ]
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "$ref": "#/components/schemas/tokenNotFound"
                      },
                      {
                        "$ref": "#/components/schemas/invalidToken"
                      }
                    ]
                  }
                }
              }
            }
          },
          "201": {
            "description": "Cadastrado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "$ref":"#/components/schemas/Talker"
                }
              }
            }
          }
        }
      }
    },
    "/talker/search": {
      "get": {
        "description": "Rota que retorna os 'talkers' que contiver no nome o que foi digitado na query",
        "tags": ["Talkers"],
        "security":[{"apiKey": [] }],
        "parameters": [
            {
              "name": "q",
              "in": "query",
              "schema":{ "type": "string" }
            }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "$ref": "#/components/schemas/tokenNotFound"
                      },
                      {
                        "$ref": "#/components/schemas/invalidToken"
                      }
                    ]
                  }
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type":"array",
                  "$ref":"#/components/schemas/Talkers"
                }
              }
            }
          }
        }
      }
    },
    "/talker/:id": {
      "get": {},
      "put": {},
      "delete": {}
    }
  },
  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Token": {
        "type":"object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "Talker": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "age": {
            "type": "number"
          },
          "id": {
            "type": "number"
          },
          "talk": {
            "type": "object",
            "properties": {
              "watchedAt": {
                "type": "string"
              },
              "rate": {
                "type":"number"
              }
            }
          }
        }
      },
      "EditTalker": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "age": {
            "type": "number"
          },
          "talk": {
            "type": "object",
            "properties": {
              "watchedAt": {
                "type": "string"
              },
              "rate": {
                "type":"number"
              }
            }
          }
        }
      },
      "Talkers": {
        "type": "array",
        "items": {
          "type":"object",
          "properties": {
            "name": {
              "type": "string"
            },
            "age": {
              "type": "number"
            },
            "id": {
              "type": "number"
            },
            "talk": {
              "type": "object",
              "properties": {
                "watchedAt": {
                  "type": "string"
                },
                "rate": {
                  "type":"number"
                }
              }
            }
          }
        }
      },
      "emailIsRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O campo 'email' é obrigatório"
          }
        }
      },
      "emailMustHaveThe@": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O 'email' deve ter o formato 'email@email.com'"
          }
        }
      },
      "passwordIsRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O campo 'password' é obrigatório"
          }
        }
      },
      "passwordIsNotgt6": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O 'password' deve ter pelo menos 6 caracteres"
          }
        }
      },
      "tokenNotFound": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Token não encontrado"
          }
        }
      },
      "invalidToken": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Token inválido"
          }
        }
      },
      "nameIsRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O campo 'name' é obrigatório"
          }
        }
      },
      "nameIsNotgt3": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O 'name' deve ter pelo menos 3 caracteres"
          }
        }
      },
      "ageIsRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O campo 'age' é obrigatório"
          }
        }
      },
      "ageIsNotgt18": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "A pessoa palestrante deve ser maior de idade"
          }
        }
      },
      "watchedAtIsRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O campo 'watchedAt' é obrigatório"
          }
        }
      },
      "watchedAtMustHaveDateFormat": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O campo 'watchedAt' deve ter o formato 'dd/mm/aaaa'"
          }
        }
      },
      "rateIsRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O campo 'rate' é obrigatório"
          }
        }
      },
      "rateIsAIntegerlt5": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O campo 'rate' deve ser um inteiro de 1 à 5"
          }
        }
      },
      "talkIsRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "O campo 'talk' é obrigatório"
          }
        }
      }
    },
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "name":"Authorization",
        "in": "header"
      }
    }
  }
}